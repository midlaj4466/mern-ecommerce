<section>
    <div class="container">

        <div class="row pt-5">
            {{!-- <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a> --}}

        </div>

        <table class="table pt-5 " id="">
            <thead>
                <tr>
                    <th scope="col">No.s</th>
                    <th scope="col">Time</th>
                    <th scope="col">Address</th>
                    <th scope="col">Pincode</th>
                    <th scope="col">Number</th>
                    <th scope="col">Price</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Order Status</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                {{#if this.shipped}}
                <tr class="changeColorGreen">
                    <th scope="row" class="counterCell"></th>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a type="button" href="/view-order-products/{{this._id}}"
                            class="view btn btn-outline-primary">Products</a>
                    </td>

                </tr>
                {{else}}
                <tr class="changeColorRed">
                    <th scope="row" class="counterCell"></th>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a type="button" href="/view-order-products/{{this._id}}"
                            class="view btn btn-outline-primary">Products</a>
                    </td>

                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>

</script>


<style>
    .view {
        width: 100%;

    }

    table {
        counter-reset: tableCount;
    }

    .counterCell:before {
        content: counter(tableCount);
        counter-increment: tableCount;
    }

    .changeColorRed {
        color: rgb(0, 0, 0);
        background-color: rgb(236, 155, 155);
    }

    .changeColorGreen {
        color: rgb(0, 0, 0);
        background-color: rgb(152, 253, 177);
    }
</style>